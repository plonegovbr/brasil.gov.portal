<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="brasil.gov.portal">
  <configlet title=".gov.br: Social Networks"
         action_id="social-config"
             appId="brasil.gov.portal"
             category="Products"
             condition_expr=""
         url_expr="string:${portal_url}/@@brasil.gov.portal-social"
         icon_expr="string:${portal_url}/++resource++brasil.gov.barra/ico-brasil.png"
         visible="True"
         i18n:attributes="title">
    <permission>brasil.gov.portal: Social Networks</permission>
  </configlet>
  <configlet title=".gov.br: e-Government Digital Identity"
      action_id="portal"
      appId="brasil.gov.portal"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@portal-settings"
      icon_expr="string:${portal_url}/++resource++brasil.gov.portal/img/ico-brasil.png"
      visible="True"
      i18n:attributes="title">
    <permission>brasil.gov.portal: Settings</permission>
  </configlet>
  <configlet title=".gov.br: Portal Tabs"
      action_id="portal-tabs-settings"
      appId="brasil.gov.portal"
      category="Products"
      condition_expr=""
      url_expr="string:${portal_url}/@@portal-tabs-settings"
      icon_expr="string:${portal_url}/++resource++brasil.gov.barra/ico-brasil.png"
      visible="True"
      i18n:attributes="title">
    <permission>brasil.gov.portal: Settings</permission>
  </configlet>
</object>